+"use client";
+// Универсальный вставщик JSON-LD
+export default function SEOJsonLd({ data }) {
+  if (!data) return null;
+  let json = "";
+  try {
+    json = JSON.stringify(data);
+  } catch {
+    return null;
+  }
+  return (
+    <script
+      type="application/ld+json"
+      dangerouslySetInnerHTML={{ __html: json }}
+    />
+  );
+}
